{
  "name": "nodejs-sandbox",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "volta": {
    "node": "18.4.0",
    "yarn": "1.22.19"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d dev",
    "db:migrate": "yarn prisma migrate dev",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "rebuild:be": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "node": "^18.4.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "eslint": "^8.19.0",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "swc": "^1.0.11",
    "ts-node": "^10.8.2"
  }
}
